@if (Medicare.Models.SessionHandler.IsUserApprovedDoctor(Session))
{
    <div class="mb-3">
        <h4>Doctor</h4>
        <div class="list-group">
            <a href="/appointments/mine" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">View my appointments</h6>
