@model IEnumerable<Medicare.Models.Article>

@{
    ViewBag.Title = "MyArticles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Articles</h2><hr/>
@if (Model.Count() == 0)
{
    <h5>Doctors have not published any articles yet.</h5>
}
else
{
    <table class="table table-hover table-striped table-responsive ">
        <tbody>
            @foreach (Medicare.Models.Article article in Model)
            {
                <tr class="clickable-row" data-href='/articles/view/@article.Id'>
                    <td>@article.Title</td>
                    <td style="text-align:right">@article.Time.ToString("yyyy MMM dd hh.mm tt")</td>
                </tr>
            }
        </tbody>
    </table>


}
